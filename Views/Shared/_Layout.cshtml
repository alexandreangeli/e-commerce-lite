<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - ECommerceLiteAlx</title>

        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </head>
    <body>
        <nav class="navbar-inverse navbar-fixed-top">
            <div class="container">
                    <a asp-action="Inicio" class="navbar-brand"></a>
                
                    <ul class="navegacao">
                        <li><a asp-action="inicio">Catálogo</a></li>
                        <li><a asp-action="carrinho">Carrinho</a></li>
                        <li><a asp-action="admin">Administração</a></li>
                    </ul>
            </div>
        </nav>

        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; 2019 - ECommerceLite</p>
            </footer>
        </div>

        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>

        @RenderSection("Scripts", required: false)
    </body>
</html>
